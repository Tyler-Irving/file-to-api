# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# SQLite is default, uncomment for PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/filetoapi

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
MAX_ROWS=100000
MAX_COLUMNS=100

# Rate Limiting (requests per hour)
RATE_LIMIT_UPLOAD=10/h
RATE_LIMIT_READ=1000/h
RATE_LIMIT_WRITE=100/h

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY_SALT=your-api-key-salt-here
